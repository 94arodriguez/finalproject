@page
@model finalproject.Pages.Restaurants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurant
</h1>

<p>
    <a asp-page="Create">Add Restaurant
    </a>
</p>

@{
    var prevDisabled = "";
    if (Model.PageNum <= 1)
    {
        prevDisabled = "disabled";
    }

    var nextDisabled = "";
    if (Model.PageNum >= Model.MaxPage)
    {
        nextDisabled = "disabled";
    }
}

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item @prevDisabled"><a class="page-link" asp-page="./Index" asp-route-PageNum="@(Model.PageNum - 1)">Previous</a></li>
    <li class="page-item @nextDisabled"><a class="page-link" asp-page="./Index" asp-route-PageNum="@(Model.PageNum + 1)">Next</a></li>
  </ul>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @{
                    var nameSort = "nameAsc";
                    if (Model.CurrentSort == "nameAsc")
                    {
                        nameSort = "nameDesc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@nameSort">@Html.DisplayNameFor(model => model.Restaurant[0].Name)</a>
            </th>
            <th>
                @{
                    var addressSort = "addressAsc";
                    if (Model.CurrentSort == "addressAsc")
                    {
                        addressSort = "addressDesc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@addressSort">@Html.DisplayNameFor(model => model.Restaurant[0].Address)</a>
            </th>
            <th>
                @{
                    var phoneSort = "phoneAsc";
                    if (Model.CurrentSort == "phoneAsc")
                    {
                        phoneSort = "phoneDesc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@phoneSort">@Html.DisplayNameFor(model => model.Restaurant[0].PhoneNumber)</a>
            </th>
            <th>
                @{
                    var cuisineSort = "cuisineAsc";
                    if (Model.CurrentSort == "cuisineAsc")
                    {
                        cuisineSort = "cuisineDesc";
                    }
                }
                <a asp-page="./Index" asp-route-CurrentSort="@cuisineSort">@Html.DisplayNameFor(model => model.Restaurant[0].Cuisine)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Restaurant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuisine)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RestaurantID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.RestaurantID">Delete</a> |
                <a asp-page="./Details" asp-route-id="@item.RestaurantID">Reviews</a>
                
            </td>
        </tr>
}
    </tbody>
</table>

<hr/>
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item @prevDisabled"><a class="page-link" asp-page="./Index" asp-route-PageNum="@(Model.PageNum - 1)">Previous</a></li>
    <li class="page-item"><a class="page-link" asp-page="./Index" asp-route-PageNum="@(Model.PageNum + 1)">Next</a></li>
  </ul>
</nav>


