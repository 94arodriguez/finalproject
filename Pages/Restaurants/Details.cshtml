@page
@model finalproject.Pages.Restaurants.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.Cuisine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Cuisine)
        </dd>

       @foreach(var r in Model.Restaurant.Reviews)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.ReviewNum)
            </dt>
            <dd class="col-sm-1">
                @Html.DisplayFor(model => r.ReviewNum)
            </dd>
            <dt class="col-sm-9">
                <form method="post">
                    <input type="hidden" asp-for="ReviewIDToDelete" value="@r.ReviewID" />
                    <input type="submit" asp-page-handler="DeleteReview" asp-route-id="@Model.Restaurant.RestaurantID" value="Delete" class="btn btn-danger btn-sm" />
                </form>
            </dt>
        }
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
